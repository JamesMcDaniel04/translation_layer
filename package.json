{
  "name": "translation-layer",
  "version": "1.0.0",
  "description": "Multilingual text normalization API service for rev-intel platforms",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "ts-node src/db/migrate.ts",
    "download-model": "bash scripts/download-model.sh"
  },
  "keywords": [
    "translation",
    "language-detection",
    "normalization",
    "api",
    "multilingual"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/translate": "^8.5.0",
    "deepl-node": "^1.14.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "fasttext.js": "^0.2.2",
    "pg": "^8.13.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
